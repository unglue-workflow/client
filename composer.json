{
    "name": "unglue/client",
    "description": "The client binary which sends the data to the server and creates the output from the API response.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Basil Suter",
            "email": "git@nadar.io"
        }
    ],
    "require": {
        "luyadev/luya-core" : "~1.0.0"
    },
    "require-dev": {
        "luyadev/luya-testsuite" : "~1.0"
    },
    "autoload": {
        "psr-4": {
            "unglue\\client\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "unglue\\client\\tests\\" : "tests/"
        }
    },
    "bin" : [
        "src/bin/unglue"
    ],
    "archive": {
        "exclude": ["/tests"]
    }
}
