{
  "name": "unglue/client",
  "description": "The client binary which sends the data to the server and creates the output from the API response.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Basil Suter",
      "email": "git@nadar.io"
    }
  ],
  "require": {
    "luyadev/luya-core": "^1.0|^2.0"
  },
  "require-dev": {
    "luyadev/luya-testsuite" : "^3.0",
    "macfja/phar-builder": "^0.2.8"
  },
  "autoload": {
    "psr-4": {
      "unglue\\client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "unglue\\client\\tests\\": "tests/"
    }
  },
  "bin": [
    "src/bin/unglue"
  ],
  "archive": {
    "exclude": [
      "/tests"
    ]
  },
  "extra": {
    "luya": {
      "symlink": false
    },
    "phar-builder": {
      "compression": "bz2",
      "name": "unglue.phar",
      "output-dir": "./",
      "entry-point": "./src/index.php",
      "include": [
        "src"
      ],
      "include-dev": false,
      "shebang": true,
      "skip-shebang": false,
      "excluded": [
        "/tests",
        "/testdata",
        "vendor/giggsey",
        "vendor/ezyang",
        "vendor/flowjs",
        "vendor/lcobucci",
        "vendor/twig",
        "vendor/phpunit",
        "vendor/bower-asset",
        "vendor/phpmailer",
        "vendor/cebe"
      ],
      "dev": false
    }
  },
  "config": {
    "fxp-asset": {
      "enabled": false
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "phar" : "php -d phar.readonly=0 vendor/bin/phar-builder package composer.json --no-interaction && chmod +x unglue.phar"
  }
}
