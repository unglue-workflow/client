{
    "name": "unglue/client",
    "description": "The client binary which sends the data to the server and creates the output from the API response.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Basil Suter",
            "email": "git@nadar.io"
        }
    ],
    "require": {
        "luyadev/luya-core" : "^1.0"
    },
    "require-dev": {
        "luyadev/luya-testsuite" : "^1.0",
        "macfja/phar-builder": "^0.2.8"
    },
    "autoload": {
        "psr-4": {
            "unglue\\client\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "unglue\\client\\tests\\" : "tests/"
        }
    },
    "bin" : [
        "src/bin/unglue"
    ],
    "archive": {
        "exclude": ["/tests"]
    },
    "extra" : {
        "luya" : {
            "symlink": false
        },
        "phar-builder": {
            "compression": "none",
            "name": "unglue.phar",
            "output-dir": "./",
            "entry-point": "./src/index.php",
            "include": ["src"],
            "include-dev": false,
            "shebang": true,
            "dev" : false
        }
    }
}
